{
  "name": "glazewm",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Library for inter-process communication (IPC) with GlazeWM.",
  "repository": "github:glzr-io/glazewm-js",
  "keywords": [
    "glazewm",
    "windows",
    "window manager",
    "ipc",
    "typescript"
  ],
  "sideEffects": false,
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "check:prettier": "prettier --check .",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "tslib": "2.6.1"
  },
  "peerDependencies": {
    "ws": "*"
  },
  "peerDependenciesMeta": {
    "ws": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "20.10.5",
    "@types/ws": "8.5.5",
    "prettier": "3.0.1",
    "typescript": "5.1.6",
    "ws": "8.13.0"
  },
  "engines": {
    "node": ">=12"
  }
}
